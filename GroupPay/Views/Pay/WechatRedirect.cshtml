@{
    Layout = "_PayLayout";
}
<body>
    <div class="header">
        <div class="logoimg">
            <img src="~/images/pay/wx.png" alt="" />
        </div>
        <div class="col-match-wechat">
        </div>
    </div>

    <div class="content" id="target"></div>
    <script id="ractiveTemplate" type="text/reactive">
        <div id="ImportantWarning" style="display:none">
            <div class="table-cell">
                <div class="Warning">
                    <div class="Warning_title">重要提示</div>
                    <div class="Warning_item">一、此二维码只限本次使用</div>
                    <div class="Warning_item">二、并且在10分钟内充值有效</div>
                    <div class="Warning_item">三、超过时间支付、重复支付</div>
                    <div class="Warning_item">四、一律不会上分，后果自负</div>
                    <div class="Warning_input">
                        <input type="button" value="同意" onclick='$("#ImportantWarning").hide(); $("#mainContent").show();' />
                    </div>
                </div>
            </div>
        </div>
        <div id="Loading">
            <table width="100%" height="100%" border="0">
                <tr>
                    <td align="center" valign="middle">
                        {{#if !error}}
                        订单号：<span id="pserno">{{mrn}}</span><br>
                        充值金额：<span class="notice-field" id="pprice">{{amount}}</span><br>
                        <img id="loadGif" src="/images/pay/loading.gif" />
                        {{/if}}
                        <div class="Loadingtxt">{{message}}</div>
                    </td>
                </tr>
            </table>
        </div>
        <div id="mainContent" style="display:none">
            <div class="top_info">
                订单号：<span id="pserno">{{mrn}}</span>
                <br />
                充值金额：
                <span class="copy-filed-wechat">
                    &nbsp;
                    <span class="notice-field" id="pprice">{{amount}}</span>
                </span>
            </div>
            <div class="qrcode" id="QRCode"></div>
            <div class="info-notice">
                <span class="info-notice-title">充值流程</span>
                <ol class="blue">
                    <li>截图保存到手机</li>
                    <li>用微信扫一扫相册扫码</li>
                    <li>请勿重复支付</li>
                </ol>
                <p class="ps-field">注：有任何问题请联系平台客服</p>
            </div>
        </div>
    </script>
</body>
@section Scripts{
    <script type="text/javascript">
        $(document).ready(function () {
            initWechatWapPage("@Html.Raw(@ViewBag.ErrorMsg)");
        });
    </script>
}
