@{
    Layout = "_PayLayout";
}
<body>
    <div class="header">
        <div class="logoimg">
            <img src="~/images/pay/ali.png" alt="" />
        </div>
        <div class="col-match">
            <img src="~/images/pay/aliBar.png" class="titlebar" />
        </div>
    </div>

    <div class="content" id="target"></div>
    <script id="ractiveTemplate" type="text/reactive">
        <div id="Loading">
            <table width="100%" height="100%" border="0">
                <tr>
                    <td align="center" valign="middle">
                        {{#if !error}}
                        订单号：<span id="pserno">{{mrn}}</span><br>
                        充值金额：<span class="notice-field" id="pprice">{{amount}}</span><br>
                        <img id="loadGif" src="/images/pay/loading.gif" />
                        {{/if}}
                        <div class="Loadingtxt">{{message}}</div>
                    </td>
                </tr>
            </table>
        </div>
        <div id="mainContent" style="display:none">
            <div class="top_info">
                订单号：<span id="pserno">{{mrn}}</span>
                <br />
                充值金额：
                <span class="copy-filed">
                    &nbsp;
                    <span class="notice-field" id="pprice">{{amount}}</span>
                </span>
            </div>
            <div style="font-size:16px;text-align:center; padding:15px 0; clear: both;">
                <a href="#" class="aliToBankBtn cp" data-clipboard-action="copy" data-clipboard-text="{{payUrl}}">点击复制付款链接</a><br>
            </div>
            <div class="info-notice">
                <span class="info-notice-title">充值流程</span>
                <ol class="blue">
                    <li>点击复制链接</li>
                    <li>打开支付宝</li>
                    <li>选择任意好友</li>
                    <li>点击链结支付</li>
                </ol>
                <p class="ps-field">注：有任何问题请联系平台客服</p>
            </div>
        </div>
    </script>
 </body>
@section Scripts{
    <script type="text/javascript">
$(document).ready(function () {
    initAliBankRedirectPage("@Html.Raw(@ViewBag.ErrorMsg)");
});
    </script>
}
