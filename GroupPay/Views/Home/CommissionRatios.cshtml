@{
    ViewData["Title"] = "代理佣金设置";
}

<partial name="_ConsoleHeader" />

<div id="target"></div>
<script id="template" type="text/ractive">
    <div class="text-primary pb-2">{{message}}</div>
    <div class="responsiveTable">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>业绩下限</th>
                    <th>业绩上限</th>
                    <th>佣金比例</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                {{#each ratios}}
                <tr>
                    <td>{{lowerBound}}</td>
                    <td>{{upperBound}}</td>
                    <td>{{ratio.toLocaleString('en-US', {maximumFractionDigits: 6, minimumFractionDigits: 4})}}</td>
                    <td><button type="button" class="btn btn-secondary" on-click="delete">删除</button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
        <div class="container text-left m-0">
            <button type="button" class="btn btn-secondary" on-click="add">添加</button>
        </div>
    </div>

    <div class="modal fade" id="confirmationModal" tabindex="-1" role="dialog" aria-labelledby="confirmationModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmationModalLabel">{{confirmTitle}}</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <h6>{{confirmMsg}}</h6>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" on-click="actionConfirmed">确定</button>
                </div>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addRatioModal" tabindex="-1" role="dialog" aria-labelledby="addRatioModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addRatioModalLabel">添加佣金比例</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <div class="form-group">
                            <label for="lowerBound">业绩下限:</label>
                            <input type="text" id="lowerBound" style="width:100%" value="{{lowerBound}}" class="form-control" placeholder="业绩下限" />
                        </div>
                        <div class="form-group">
                            <label for="upperBound">业绩上限:</label>
                            <input type="text" id="upperBound" style="width:100%" value="{{upperBound}}" class="form-control" placeholder="业绩下限" />
                        </div>
                        <div class="form-group">
                            <label for="commissionRatio">佣金比例:</label>
                            <input type="text" id="commissionRatio" style="width:100%" value="{{commissionRatio}}" class="form-control" placeholder="业绩下限" />
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary" on-click="doAdd">确定</button>
                </div>
            </div>
        </div>
    </div>
</script>
@section Scripts{
    <script type="text/javascript">$(document).ready(initCommissionRaiosPage);</script>
}